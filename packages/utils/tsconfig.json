{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES5",
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src"],
  "exclude": ["/node_modules/"]
}
